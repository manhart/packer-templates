[Unit]
Description=MailCatcher
After=network.target
After=systemd-user-sessions.service

[Service]
Type=simple
Restart=on-failure
RestartSec=1
User=root
ExecStart=/usr/local/bin/mailcatcher --foreground --smtp-ip 0.0.0.0 smtp-port 2525 --http-ip 0.0.0.0 --http-port 1080

[Install]
WantedBy=multi-user.target